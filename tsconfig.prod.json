{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "declaration": false,
    "incremental": true,
    "rootDir": "src",
    "outDir": "./dist",
    "removeComments": true,
    "tsBuildInfoFile": "./dist/tsconfig.prod.cjs.tsbuildinfo",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noEmit": false,
    "allowJs": false
  },
  "exclude": [
    "docs",
    "dist",
    "eslint.config.mjs",
    "sample",
    "test"
  ]
}